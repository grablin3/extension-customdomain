import React from 'react';

interface Domain {
  id: number;
  domain: string;
  status: 'PENDING_VERIFICATION' | 'VERIFICATION_FAILED' | 'VERIFIED' | 'PROVISIONING_SSL' | 'ACTIVE' | 'SUSPENDED' | 'EXPIRED';
  sslStatus: 'PENDING' | 'PROVISIONING' | 'ACTIVE' | 'EXPIRED' | 'FAILED';
  verificationExpiresAt?: string;
  createdAt: string;
}

interface DomainListProps {
  domains: Domain[];
  onSelect: (domain: Domain) => void;
  onDelete: (domainId: number) => void;
  selectedId?: number;
}

const statusLabels: Record<string, { label: string; color: string }> = {
  PENDING_VERIFICATION: { label: 'Pending Verification', color: 'bg-yellow-100 text-yellow-800' },
  VERIFICATION_FAILED: { label: 'Verification Failed', color: 'bg-red-100 text-red-800' },
  VERIFIED: { label: 'Verified', color: 'bg-blue-100 text-blue-800' },
  PROVISIONING_SSL: { label: 'Provisioning SSL', color: 'bg-blue-100 text-blue-800' },
  ACTIVE: { label: 'Active', color: 'bg-green-100 text-green-800' },
  SUSPENDED: { label: 'Suspended', color: 'bg-gray-100 text-gray-800' },
  EXPIRED: { label: 'Expired', color: 'bg-red-100 text-red-800' },
};

export function DomainList({ domains, onSelect, onDelete, selectedId }: DomainListProps) {
  if (domains.length === 0) {
    return (
      <div className="text-center py-8 text-gray-500">
        <p>No custom domains configured.</p>
        <p className="text-sm mt-2">Add your first custom domain to get started.</p>
      </div>
    );
  }

  return (
    <div className="space-y-2">
      {domains.map((domain) => {
        const statusInfo = statusLabels[domain.status] || { label: domain.status, color: 'bg-gray-100' };
        const isSelected = selectedId === domain.id;

        return (
          <div
            key={domain.id}
            className={`p-4 border rounded-lg cursor-pointer transition-colors ${
              isSelected ? 'border-blue-500 bg-blue-50' : 'border-gray-200 hover:border-gray-300'
            }`}
            onClick={() => onSelect(domain)}
          >
            <div className="flex items-center justify-between">
              <div className="flex items-center gap-3">
                <div>
                  <h3 className="font-medium text-gray-900">{domain.domain}</h3>
                  <p className="text-sm text-gray-500">
                    Added {new Date(domain.createdAt).toLocaleDateString()}
                  </p>
                </div>
              </div>

              <div className="flex items-center gap-3">
                <span className={`px-2.5 py-0.5 rounded-full text-xs font-medium ${statusInfo.color}`}>
                  {statusInfo.label}
                </span>

                {domain.status === 'ACTIVE' && domain.sslStatus === 'ACTIVE' && (
                  <span className="text-green-600" title="SSL Active">
                    <svg className="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fillRule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clipRule="evenodd" />
                    </svg>
                  </span>
                )}

                <button
                  onClick={(e) => {
                    e.stopPropagation();
                    if (window.confirm(`Are you sure you want to delete ${domain.domain}?`)) {
                      onDelete(domain.id);
                    }
                  }}
                  className="text-gray-400 hover:text-red-600 transition-colors"
                  title="Delete domain"
                >
                  <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        );
      })}
    </div>
  );
}
