import React, { useState } from 'react';

interface DnsInstructionsProps {
  domain: {
    domain: string;
    status: string;
    verificationRecordName: string;
    verificationRecordValue: string;
    verificationRecordType: string;
    verificationExpiresAt: string;
  };
  onVerify: () => Promise<void>;
  onRefresh: () => Promise<void>;
  isVerifying: boolean;
}

export function DnsInstructions({ domain, onVerify, onRefresh, isVerifying }: DnsInstructionsProps) {
  const [copied, setCopied] = useState<string | null>(null);

  const copyToClipboard = async (text: string, field: string) => {
    try {
      await navigator.clipboard.writeText(text);
      setCopied(field);
      setTimeout(() => setCopied(null), 2000);
    } catch (err) {
      console.error('Failed to copy:', err);
    }
  };

  const expiresIn = new Date(domain.verificationExpiresAt).getTime() - Date.now();
  const hoursRemaining = Math.max(0, Math.floor(expiresIn / (1000 * 60 * 60)));
  const isExpired = hoursRemaining <= 0;

  return (
    <div className="space-y-4">
      <div className="bg-blue-50 border-l-4 border-blue-400 p-4">
        <div className="flex">
          <div className="flex-shrink-0">
            <svg className="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
              <path fillRule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clipRule="evenodd" />
            </svg>
          </div>
          <div className="ml-3">
            <h3 className="text-sm font-medium text-blue-800">DNS Configuration Required</h3>
            <p className="mt-1 text-sm text-blue-700">
              Add the following {domain.verificationRecordType} record to your DNS settings to verify domain ownership.
            </p>
          </div>
        </div>
      </div>

      <div className="bg-gray-50 rounded-lg p-4 space-y-4">
        <div>
          <label className="block text-xs font-medium text-gray-500 uppercase tracking-wider">
            Record Type
          </label>
          <div className="mt-1 font-mono text-sm bg-white p-2 rounded border border-gray-200">
            {domain.verificationRecordType}
          </div>
        </div>

        <div>
          <label className="block text-xs font-medium text-gray-500 uppercase tracking-wider">
            Name / Host
          </label>
          <div className="mt-1 flex items-center gap-2">
            <code className="flex-1 font-mono text-sm bg-white p-2 rounded border border-gray-200 break-all">
              {domain.verificationRecordName}
            </code>
            <button
              onClick={() => copyToClipboard(domain.verificationRecordName, 'name')}
              className="px-3 py-2 text-sm text-blue-600 hover:bg-blue-50 rounded border border-blue-200 transition-colors"
            >
              {copied === 'name' ? 'Copied!' : 'Copy'}
            </button>
          </div>
        </div>

        <div>
          <label className="block text-xs font-medium text-gray-500 uppercase tracking-wider">
            Value / Target
          </label>
          <div className="mt-1 flex items-center gap-2">
            <code className="flex-1 font-mono text-sm bg-white p-2 rounded border border-gray-200 break-all">
              {domain.verificationRecordValue}
            </code>
            <button
              onClick={() => copyToClipboard(domain.verificationRecordValue, 'value')}
              className="px-3 py-2 text-sm text-blue-600 hover:bg-blue-50 rounded border border-blue-200 transition-colors"
            >
              {copied === 'value' ? 'Copied!' : 'Copy'}
            </button>
          </div>
        </div>
      </div>

      <div className="flex items-center justify-between">
        <div>
          {isExpired ? (
            <span className="text-sm text-red-600 font-medium">
              Verification expired.{' '}
              <button onClick={onRefresh} className="underline hover:no-underline">
                Generate new token
              </button>
            </span>
          ) : (
            <span className="text-sm text-gray-500">
              Expires in {hoursRemaining} hours
            </span>
          )}
        </div>
        <button
          onClick={onVerify}
          disabled={isVerifying || isExpired}
          className="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
        >
          {isVerifying ? (
            <span className="flex items-center">
              <svg className="animate-spin -ml-1 mr-2 h-4 w-4 text-white" fill="none" viewBox="0 0 24 24">
                <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4" />
                <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z" />
              </svg>
              Verifying...
            </span>
          ) : (
            'Verify DNS'
          )}
        </button>
      </div>

      <details className="text-sm">
        <summary className="cursor-pointer text-blue-600 hover:text-blue-800">
          DNS Provider Instructions
        </summary>
        <div className="mt-3 space-y-2 text-gray-600 bg-gray-50 p-3 rounded">
          <p><strong>Cloudflare:</strong> DNS &gt; Add Record &gt; Select {domain.verificationRecordType}</p>
          <p><strong>GoDaddy:</strong> DNS Management &gt; Add &gt; {domain.verificationRecordType} Record</p>
          <p><strong>Namecheap:</strong> Advanced DNS &gt; Add New Record</p>
          <p><strong>Route53:</strong> Hosted Zones &gt; Create Record</p>
          <p><strong>Google Domains:</strong> DNS &gt; Custom Records &gt; Manage</p>
          <p className="mt-2 text-xs text-gray-500">
            Note: DNS changes may take up to 48 hours to propagate, though most complete within 15 minutes.
          </p>
        </div>
      </details>
    </div>
  );
}
