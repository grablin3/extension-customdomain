import React, { useState, useEffect, useCallback } from 'react';
import { useTeam } from '../contexts/TeamContext';
import { DomainList } from '../components/domain/DomainList';
import { AddDomainForm } from '../components/domain/AddDomainForm';
import { DnsInstructions } from '../components/domain/DnsInstructions';
import { VerificationStatus } from '../components/domain/VerificationStatus';

interface Domain {
  id: number;
  domain: string;
  status: 'PENDING_VERIFICATION' | 'VERIFICATION_FAILED' | 'VERIFIED' | 'PROVISIONING_SSL' | 'ACTIVE' | 'SUSPENDED' | 'EXPIRED';
  sslStatus: 'PENDING' | 'PROVISIONING' | 'ACTIVE' | 'EXPIRED' | 'FAILED';
  verificationRecordName: string;
  verificationRecordValue: string;
  verificationRecordType: string;
  verificationExpiresAt: string;
  verifiedAt?: string;
  sslExpiresAt?: string;
  createdAt: string;
  updatedAt: string;
}

interface VerificationResult {
  result: 'VERIFIED' | 'PENDING' | 'EXPIRED' | 'ALREADY_VERIFIED';
  message: string;
  recordName?: string;
  recordValue?: string;
  recordType?: string;
  expiresAt?: string;
}

const MAX_DOMAINS = {{maxDomainsPerTeam}};

export function CustomDomainPage() {
  const { currentTeam, isAdmin } = useTeam();
  const [domains, setDomains] = useState<Domain[]>([]);
  const [selectedDomain, setSelectedDomain] = useState<Domain | null>(null);
  const [isLoading, setIsLoading] = useState(true);
  const [isVerifying, setIsVerifying] = useState(false);
  const [verificationResult, setVerificationResult] = useState<VerificationResult | null>(null);
  const [error, setError] = useState<string | null>(null);

  const fetchDomains = useCallback(async () => {
    if (!currentTeam) return;

    try {
      const response = await fetch(`/api/teams/${currentTeam.id}/domains`);
      if (!response.ok) throw new Error('Failed to fetch domains');
      const data = await response.json();
      setDomains(data);
    } catch (err) {
      setError(err instanceof Error ? err.message : 'Failed to load domains');
    } finally {
      setIsLoading(false);
    }
  }, [currentTeam]);

  useEffect(() => {
    fetchDomains();
  }, [fetchDomains]);

  // Poll for status updates when there are pending domains
  useEffect(() => {
    const hasPending = domains.some(
      d => d.status === 'PROVISIONING_SSL' || d.status === 'VERIFIED'
    );

    if (!hasPending) return;

    const interval = setInterval(fetchDomains, 10000); // Poll every 10 seconds
    return () => clearInterval(interval);
  }, [domains, fetchDomains]);

  const handleAddDomain = async (domain: string) => {
    if (!currentTeam) return;

    const response = await fetch(`/api/teams/${currentTeam.id}/domains`, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ domain }),
    });

    if (!response.ok) {
      const errorData = await response.json();
      throw new Error(errorData.message || 'Failed to add domain');
    }

    const newDomain = await response.json();
    setDomains(prev => [newDomain, ...prev]);
    setSelectedDomain(newDomain);
  };

  const handleDeleteDomain = async (domainId: number) => {
    if (!currentTeam) return;

    try {
      const response = await fetch(`/api/teams/${currentTeam.id}/domains/${domainId}`, {
        method: 'DELETE',
      });

      if (!response.ok) throw new Error('Failed to delete domain');

      setDomains(prev => prev.filter(d => d.id !== domainId));
      if (selectedDomain?.id === domainId) {
        setSelectedDomain(null);
      }
    } catch (err) {
      setError(err instanceof Error ? err.message : 'Failed to delete domain');
    }
  };

  const handleVerifyDomain = async () => {
    if (!currentTeam || !selectedDomain) return;

    setIsVerifying(true);
    setVerificationResult(null);

    try {
      const response = await fetch(
        `/api/teams/${currentTeam.id}/domains/${selectedDomain.id}/verify`,
        { method: 'POST' }
      );

      if (!response.ok) throw new Error('Verification failed');

      const result: VerificationResult = await response.json();
      setVerificationResult(result);

      if (result.result === 'VERIFIED') {
        // Refresh domains to get updated status
        await fetchDomains();
      }
    } catch (err) {
      setError(err instanceof Error ? err.message : 'Verification failed');
    } finally {
      setIsVerifying(false);
    }
  };

  const handleRefreshVerification = async () => {
    if (!currentTeam || !selectedDomain) return;

    try {
      const response = await fetch(
        `/api/teams/${currentTeam.id}/domains/${selectedDomain.id}/refresh`,
        { method: 'POST' }
      );

      if (!response.ok) throw new Error('Failed to refresh verification');

      const refreshedDomain = await response.json();
      setDomains(prev => prev.map(d => d.id === refreshedDomain.id ? refreshedDomain : d));
      setSelectedDomain(refreshedDomain);
      setVerificationResult(null);
    } catch (err) {
      setError(err instanceof Error ? err.message : 'Failed to refresh verification');
    }
  };

  if (!currentTeam) {
    return (
      <div className="p-6">
        <p className="text-gray-500">Please select a team to manage custom domains.</p>
      </div>
    );
  }

  if (isLoading) {
    return (
      <div className="p-6 flex items-center justify-center">
        <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600" />
      </div>
    );
  }

  return (
    <div className="p-6 max-w-4xl mx-auto">
      <div className="mb-8">
        <h1 className="text-2xl font-bold text-gray-900">Custom Domains</h1>
        <p className="mt-1 text-gray-600">
          Connect your own domain to your application.
        </p>
      </div>

      {error && (
        <div className="mb-6 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded relative">
          {error}
          <button
            onClick={() => setError(null)}
            className="absolute top-0 bottom-0 right-0 px-4 py-3"
          >
            <svg className="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path fillRule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clipRule="evenodd" />
            </svg>
          </button>
        </div>
      )}

      {isAdmin && (
        <div className="mb-8 bg-white rounded-lg shadow p-6">
          <h2 className="text-lg font-medium text-gray-900 mb-4">Add New Domain</h2>
          <AddDomainForm
            onSubmit={handleAddDomain}
            maxDomains={MAX_DOMAINS}
            currentCount={domains.length}
          />
        </div>
      )}

      <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div className="bg-white rounded-lg shadow p-6">
          <h2 className="text-lg font-medium text-gray-900 mb-4">Your Domains</h2>
          <DomainList
            domains={domains}
            onSelect={setSelectedDomain}
            onDelete={handleDeleteDomain}
            selectedId={selectedDomain?.id}
          />
        </div>

        {selectedDomain && (
          <div className="bg-white rounded-lg shadow p-6">
            <h2 className="text-lg font-medium text-gray-900 mb-4">
              Domain Details
            </h2>
            <div className="mb-4">
              <p className="text-xl font-medium">{selectedDomain.domain}</p>
              <p className="text-sm text-gray-500">
                Status: {selectedDomain.status.replace(/_/g, ' ')}
              </p>
            </div>

            {verificationResult && (
              <div className="mb-4">
                <VerificationStatus status={verificationResult} />
              </div>
            )}

            {(selectedDomain.status === 'PENDING_VERIFICATION' ||
              selectedDomain.status === 'VERIFICATION_FAILED') && (
              <DnsInstructions
                domain={selectedDomain}
                onVerify={handleVerifyDomain}
                onRefresh={handleRefreshVerification}
                isVerifying={isVerifying}
              />
            )}

            {selectedDomain.status === 'PROVISIONING_SSL' && (
              <div className="bg-blue-50 border-l-4 border-blue-400 p-4">
                <div className="flex">
                  <div className="flex-shrink-0">
                    <svg className="animate-spin h-5 w-5 text-blue-400" fill="none" viewBox="0 0 24 24">
                      <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4" />
                      <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z" />
                    </svg>
                  </div>
                  <div className="ml-3">
                    <p className="text-sm font-medium text-blue-800">
                      Provisioning SSL Certificate
                    </p>
                    <p className="mt-1 text-sm text-blue-700">
                      This process may take a few minutes. The page will update automatically.
                    </p>
                  </div>
                </div>
              </div>
            )}

            {selectedDomain.status === 'ACTIVE' && (
              <div className="bg-green-50 border-l-4 border-green-400 p-4">
                <div className="flex">
                  <div className="flex-shrink-0">
                    <svg className="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fillRule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clipRule="evenodd" />
                    </svg>
                  </div>
                  <div className="ml-3">
                    <p className="text-sm font-medium text-green-800">
                      Domain Active
                    </p>
                    <p className="mt-1 text-sm text-green-700">
                      Your custom domain is configured and SSL is active.
                    </p>
                    {selectedDomain.sslExpiresAt && (
                      <p className="mt-1 text-xs text-green-600">
                        SSL expires: {new Date(selectedDomain.sslExpiresAt).toLocaleDateString()}
                      </p>
                    )}
                  </div>
                </div>
              </div>
            )}
          </div>
        )}
      </div>
    </div>
  );
}
