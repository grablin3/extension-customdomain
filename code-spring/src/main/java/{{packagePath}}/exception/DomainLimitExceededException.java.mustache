package {{packageName}}.exception;

import org.springframework.http.HttpStatus;
import org.springframework.web.bind.annotation.ResponseStatus;

/**
 * Exception thrown when a team has reached the maximum number of custom domains.
 */
@ResponseStatus(HttpStatus.FORBIDDEN)
public class DomainLimitExceededException extends RuntimeException {

    public DomainLimitExceededException(String message) {
        super(message);
    }

    public DomainLimitExceededException(String message, Throwable cause) {
        super(message, cause);
    }
}
