package {{packageName}}.model.req;

import jakarta.validation.constraints.NotBlank;
import jakarta.validation.constraints.Pattern;
import jakarta.validation.constraints.Size;

/**
 * Request to add a new custom domain.
 */
public class DomainAddRequest {

    @NotBlank(message = "Domain is required")
    @Size(max = 255, message = "Domain must be less than 255 characters")
    @Pattern(
        regexp = "^(?!-)[A-Za-z0-9-]{1,63}(?<!-)(\\.[A-Za-z0-9-]{1,63})*\\.[A-Za-z]{2,}$",
        message = "Invalid domain format"
    )
    private String domain;

    public DomainAddRequest() {
    }

    public DomainAddRequest(String domain) {
        this.domain = domain;
    }

    public String getDomain() {
        return domain;
    }

    public void setDomain(String domain) {
        this.domain = domain;
    }
}
